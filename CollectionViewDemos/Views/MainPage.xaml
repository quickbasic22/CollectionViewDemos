<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:CollectionViewDemos.Views"
             x:DataType="{x:Type views:MainPage}"
             x:Class="CollectionViewDemos.Views.MainPage"
             Title="CollectionView Demos">


    <ScrollView>
        <StackLayout>
            <Label Text="Layout" FontSize="Large" BackgroundColor="DarkBlue" TextColor="White" />
            <Button Text="Vertical list" Command="{Binding NavigateCommand}" CommandParameter="{x:Type views:VerticalListTextPage}" />
            <Label Text="Layout" FontSize="Large" BackgroundColor="DarkBlue" TextColor="White" />
            <Button Text="Vertical list" Command="{Binding NavigateCommand}" CommandParameter="{x:Type views:HorizontalListTextPage}" />
        </StackLayout>
    </ScrollView>

</ContentPage>